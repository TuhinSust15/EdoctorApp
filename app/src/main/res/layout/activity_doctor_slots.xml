<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iftek.edoctorapp.DoctorSlots">

    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:textSize="30sp"
        android:text="Selected Date by Doctor" />
    <TextView
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="Doctor's Slot are Here"
        android:layout_below="@+id/tvSelectedDate"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="100dp"
        android:layout_alignStart="@+id/tvSelectedDate"
        android:layout_alignEnd="@+id/tvSelectedDate"
        android:id="@+id/textView4" />

    <Button
        android:id="@+id/btTestslot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Slot 1" />

    <Button
        android:id="@+id/slot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btTestslot1"
        android:layout_below="@+id/btTestslot1"
        android:layout_marginTop="35dp"
        android:text="Slot 2" />

    <Button
        android:id="@+id/slot3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/slot2"
        android:layout_below="@+id/slot2"
        android:layout_marginTop="36dp"
        android:text="Slot 3" />


</RelativeLayout>
